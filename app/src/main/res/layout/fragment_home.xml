<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#111722"
    tools:context=".HomeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#8849F0"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginTop="30dp"
                app:cardCornerRadius="25dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#8848F2"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/profilePictureImage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/profile_picture"
                            android:background="@drawable/profile_picture_bg"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="20dp"/>

                        <LinearLayout
                            android:id="@+id/nameAddressLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignStart="@id/profilePictureImage"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginStart="41dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginEnd="30dp"
                            android:orientation="vertical"
                            android:background="@drawable/profile_picture_bg">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:textSize="18sp"
                                android:fontFamily="@font/sf_pro_display_regular"
                                android:text="Lakshay Bhatnagar"
                                android:layout_marginTop="1dp"
                                android:layout_marginStart="20dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:textSize="14sp"
                                android:fontFamily="@font/sf_pro_display_light"
                                android:text="Ghaziabad, Uttar Pradesh"
                                android:layout_marginBottom="1dp"
                                android:layout_marginStart="20dp"/>
                        </LinearLayout>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/pen_edit_icon"
                            android:background="@drawable/edit_icon_bg"
                            android:layout_alignEnd="@id/nameAddressLayout"
                            android:layout_alignParentTop="true"
                            android:layout_marginTop="22dp"
                            android:layout_marginEnd="2dp"
                            android:padding="5dp" />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="20dp"
                        android:layout_marginStart="30dp"
                        android:gravity="center"
                        android:layout_marginEnd="30dp"
                        android:layout_marginBottom="20dp"
                        android:background="#8848F2">

                        <androidx.cardview.widget.CardView
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:backgroundTint="#111722"
                            app:cardCornerRadius="30dp">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/recycle_icon"
                                    android:layout_gravity="center"
                                    app:tint="@color/white" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="3.5 kg"
                                    android:textSize="16sp"
                                    android:fontFamily="@font/sf_pro_display_bold"
                                    android:textColor="@color/white" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Recycle"
                                    android:textSize="13sp"
                                    android:layout_gravity="center"
                                    android:fontFamily="@font/sf_pro_display_light"
                                    android:textColor="@color/white" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_marginStart="5dp"
                            android:backgroundTint="#111722"
                            app:cardCornerRadius="30dp">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/co2_icon"
                                    android:layout_gravity="center"
                                    app:tint="@color/white" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="5.2 g"
                                    android:textSize="16sp"
                                    android:fontFamily="@font/sf_pro_display_bold"
                                    android:textColor="@color/white" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Carbon"
                                    android:layout_gravity="center"
                                    android:textSize="13sp"
                                    android:fontFamily="@font/sf_pro_display_light"
                                    android:textColor="@color/white" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_marginStart="5dp"
                            android:backgroundTint="#111722"
                            app:cardCornerRadius="30dp">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/plant_icon"
                                    android:layout_gravity="center"
                                    app:tint="@color/white" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="5234"
                                    android:textSize="16sp"
                                    android:fontFamily="@font/sf_pro_display_bold"
                                    android:textColor="@color/white" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Points"
                                    android:layout_gravity="center"
                                    android:textSize="13sp"
                                    android:fontFamily="@font/sf_pro_display_light"
                                    android:textColor="@color/white" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="21dp"
                    android:layout_alignParentBottom="true"
                    android:fontFamily="@font/sf_pro_display_bold"
                    android:text="Nearby bin station"
                    android:textSize="24sp"
                    android:textColor="#F8FAFB" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginEnd="21dp"
                    android:fontFamily="@font/sf_pro_display_light"
                    android:textSize="18sp"
                    android:textColor="#C2C4C6"
                    android:text="View all" />
            </RelativeLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                app:cardCornerRadius="25dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginTop="20dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/nearby_bin_image"
                    android:scaleType="fitXY" />
            </androidx.cardview.widget.CardView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="21dp"
                    android:layout_alignParentBottom="true"
                    android:fontFamily="@font/sf_pro_display_bold"
                    android:text="Materials"
                    android:textSize="24sp"
                    android:textColor="#F8FAFB" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginEnd="21dp"
                    android:fontFamily="@font/sf_pro_display_light"
                    android:textSize="18sp"
                    android:textColor="#C2C4C6"
                    android:text="View all" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</FrameLayout>